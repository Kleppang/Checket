<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intro_slider_bg2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/intro_slider_img_size"
            android:layout_height="@dimen/intro_slider_img_size"
            android:src="@drawable/img_ph" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_slider_slide2_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/intro_slider_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/intro_slider_desc_padding"
            android:paddingRight="@dimen/intro_slider_desc_padding"
            android:text="@string/intro_slider_slide2_desc"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/intro_slider_desc" />

    </LinearLayout>
</RelativeLayout>