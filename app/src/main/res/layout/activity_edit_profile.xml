<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/editProfile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_profile_black_24dp"
        android:background="@drawable/circle"
        app:civ_border_color="@color/colorDarkGray"
        app:civ_border_width="2dp"
        />

    <TextView
        android:id="@+id/change_profile_btn"
        android:layout_below="@+id/editProfile_image"
        android:text="@string/change_profile_picture"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:layout_below="@id/change_profile_btn"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_centerInParent="true"
            android:padding="12dp"
            app:backgroundTint="@color/colorPrimaryDark"
            />

    </RelativeLayout>



</RelativeLayout>